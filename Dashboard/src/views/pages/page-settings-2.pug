extends ../layouts/master.pug

block title
	title Ecom - Marketplace Dashboard Template

block content
	.content-header
		h2.content-title Site settings
	.card
		.card-body
			.row.gx-5
				aside.col-lg-3.border-end
					nav.nav.nav-pills.flex-lg-column.mb-4
						a.nav-link.active(aria-current='page' href='#') General
						a.nav-link(href='#') Moderators
						a.nav-link(href='#') Admin account
						a.nav-link(href='#') SEO settings
						a.nav-link(href='#') Mail settings
						a.nav-link(href='#') Newsletter
				.col-lg-9
					section.content-body.p-xl-4
						form
							.row.border-bottom.mb-4.pb-4
								.col-md-5
									h5 Website name
									p.text-muted(style='max-width:90%')
										| Supported languages of all pages including each product lorem ipsum dolor sit amet, consectetur adipisicing
								// col.//
								.col-md-7
									.mb-3
										label.form-label Home page title
										input.form-control(type='text' name='' placeholder='Type here')
									.mb-3
										label.form-label Description
										textarea.form-control(type='text')
								// col.//
								// row.//
							.row.border-bottom.mb-4.pb-4
								.col-md-5
									h5 Access
									p.text-muted(style='max-width:90%')
										| Give access of all pages including each product lorem ipsum dolor sit amet,
										| consectetur adipisicing
								// col.//
								.col-md-7
									label.mb-2.form-check
										input.form-check-input(checked='' name='mycheck_a1' type='radio')
										span.form-check-label  All registration is enabled
									label.mb-2.form-check
										input.form-check-input(name='mycheck_a1' type='radio')
										span.form-check-label  Only buyers is enabled
									label.mb-2.form-check
										input.form-check-input(name='mycheck_a1' type='radio')
										span.form-check-label  Only buyers is enabled
									label.mb-2.form-check
										input.form-check-input(name='mycheck_a1' type='radio')
										span.form-check-label  Stop new shop registration
								// col.//
								// row.//
							.row.border-bottom.mb-4.pb-4
								.col-md-5
									h5 Notification
									p.text-muted(style='max-width:90%')
										| Lorem ipsum dolor sit amet, consectetur adipisicing something about this
								.col-md-7
									.form-check.mb-3
										input#mycheck_notify.form-check-input(type='checkbox' value='' checked='')
										label.form-check-label(for='mycheck_notify')
											| Send notification on each user registration
									.mb-3
										input.form-control(placeholder='Text')
								// col.//
								// row.//
							.row.border-bottom.mb-4.pb-4
								.col-md-5
									h5 Currency
									p.text-muted(style='max-width:90%')  Lorem ipsum dolor sit amet, consectetur adipisicing something about this
								// col.//
								.col-md-7
									.mb-3(style='max-width: 200px')
										label.form-label Main currency
										select.form-select
											option US Dollar
											option EU Euro
											option RU Ruble
											option UZ Som
									.mb-3(style='max-width: 200px')
										label.form-label Supported curencies
										select.form-select
											option US dollar
											option RUBG russia
											option INR india
								// col.//
								// row.//
						button.btn.btn-primary(type='submit') Save all changes
						button.btn.btn-light.rounded.font-md(type='reset') Reset
