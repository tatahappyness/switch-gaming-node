extends ../layouts/master.pug

block title
	title Ecom - Marketplace Dashboard Template

block content
	.content-header
		div
			h2.content-title.card-title Order detail
			p Details for Order ID: 3453012
	.card
		header.card-header
			.row.align-items-center
				.col-lg-6.col-md-6.mb-lg-0.mb-15
					span
						i.material-icons.md-calendar_today
						b Wed, Aug 13, 2022, 4:34PM
					br
					small.text-muted Order ID: 3453012
				.col-lg-6.col-md-6.ms-auto.text-md-end
					select.form-select.d-inline-block.mb-lg-0.mb-15.mw-200
						option Change status
						option Awaiting payment
						option Confirmed
						option Shipped
						option Delivered
					a.btn.btn-primary(href='#') Save
					a.btn.btn-secondary.print.ms-2(href='#')
						i.icon.material-icons.md-print
		.card-body
			.row.mb-50.mt-20.order-info-wrap
				.col-md-4
					article.icontext.align-items-start
						span.icon.icon-sm.rounded-circle.bg-primary-light
							i.text-primary.material-icons.md-person
						.text
							h6.mb-1 Customer
							p.mb-1
								| John Alexander
								br
								|  alex@example.com
								br
								|  +998 99 22123456
							a(href='#') View profile
				.col-md-4
					article.icontext.align-items-start
						span.icon.icon-sm.rounded-circle.bg-primary-light
							i.text-primary.material-icons.md-local_shipping
						.text
							h6.mb-1 Order info
							p.mb-1
								| Shipping: Fargo express
								br
								|  Pay method: card
								br
								|  Status: new
							a(href='#') Download info
				.col-md-4
					article.icontext.align-items-start
						span.icon.icon-sm.rounded-circle.bg-primary-light
							i.text-primary.material-icons.md-place
						.text
							h6.mb-1 Deliver to
							p.mb-1
								| City: Tashkent, Uzbekistan
								br
								| Block A, House 123, Floor 2
								br
								|  Po Box 10000
							a(href='#') View profile
			.row
				.col-lg-7
					.table-responsive
						table.table
							thead
								tr
									th(width='40%') Product
									th(width='20%') Unit Price
									th(width='20%') Quantity
									th.text-end(width='20%') Total
							tbody
								tr
									td
										a.itemside(href='#')
											.left
												img.img-xs(src='/backend/assets/imgs/items/1.jpg' alt='Item' width='40' height='40')
											.info  T-shirt blue, XXL size
									td  $44.25
									td  2
									td.text-end  $99.50
								tr
									td
										a.itemside(href='#')
											.left
												img.img-xs(src='/backend/assets/imgs/items/2.jpg' alt='Item' width='40' height='40')
											.info  Winter jacket for men
									td  $7.50
									td  2
									td.text-end  $15.00
								tr
									td
										a.itemside(href='#')
											.left
												img.img-xs(src='/backend/assets/imgs/items/3.jpg' alt='Item' width='40' height='40')
											.info  Jeans wear for men
									td  $43.50
									td  2
									td.text-end  $102.04
								tr
									td
										a.itemside(href='#')
											.left
												img.img-xs(src='/backend/assets/imgs/items/4.jpg' alt='Item' width='40' height='40')
											.info  Product name color and size
									td  $99.00
									td  3
									td.text-end  $297.00
								tr
									td(colspan='4')
										article.float-end
											dl.dlist
												dt Subtotal:
												dd $973.35
											dl.dlist
												dt Shipping cost:
												dd $10.00
											dl.dlist
												dt Grand total:
												dd
													b.h5 $983.00
											dl.dlist
												dt.text-muted Status:
												dd
													span.badge.rounded-pill.alert-success.text-success Payment done
					a.btn.btn-primary(href='page-orders-tracking.html') View Order Tracking
				.col-lg-1
				.col-lg-4
					.box.shadow-sm.bg-light
						h6.mb-15 Payment info
						p
							img.border(src='/backend/assets/imgs/card-brands/2.png' height='20')
							|  Master Card **** **** 4768
							br
							|                                     Business name: Grand Market LLC
							br
							|                                     Phone: +1 (800) 555-154-52
					.h-25.pt-4
						.mb-3
							label Notes
							textarea#notes.form-control(name='notes' placeholder='Type some note')
						button.btn.btn-primary Save note
