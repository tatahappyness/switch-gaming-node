include ../components/top-bar.pug
header.header.sticky-bar
  .container
    .main-header
      .header-left
        .header-logo
          a.d-flex(href='index.html')
            img(alt='Ecom', src='assets/imgs/template/logo.svg')
        .header-search
          .box-header-search
            form.form-search(method='post', action='#')
              .box-category
                select.select-active.select2-hidden-accessible
                  option All categories
                  option(value='Computers Accessories') Computers Accessories
                  option(value='Cell Phones') Cell Phones
                  option(value='Gaming Gatgets') Gaming Gatgets
                  option(value='Smart watches') Smart watches
                  option(value='Wired Headphone') Wired Headphone
                  option(value='Mouse & Keyboard') Mouse Keyboard
                  option(value='Headphone') Headphone
                  option(value='Bluetooth devices') Bluetooth devices
                  option(value='Cloud Software') Cloud Software
              .box-keysearch
                input.form-control.font-xs(type='text', value='', placeholder='Search for items')
        .header-nav
          include ../components/main-menu.pug
          .burger-icon.burger-icon-white
            span.burger-icon-top
            span.burger-icon-mid
            span.burger-icon-bottom
        .header-shop
          .d-inline-block.box-dropdown-cart
            span.font-lg.icon-list.icon-account
              span Account
            .dropdown-account
              ul
                li
                  a(href='page-account.html')
                    | My Account
                li
                  a(href='page-account.html')
                    | Order Tracking
                li
                  a(href='page-account.html')
                    | My Orders
                li
                  a(href='page-account.html')
                    | My Wishlist
                li
                  a(href='page-account.html')
                    | Setting
                li
                  a(href='page-login.html')
                    | Sign out

          a.font-lg.icon-list.icon-wishlist(href='shop-wishlist.html')
            span Wishlist
            span.number-item.font-xs 5
          .d-inline-block.box-dropdown-cart
            span.font-lg.icon-list.icon-cart
              span Cart
              span.number-item.font-xs 2
            .dropdown-cart
              .item-cart.mb-20
                .cart-image
                  img(src="assets/imgs/page/homepage1/imgsp5.png", alt="Ecom")
                .cart-info
                  a.font-sm-bold.color-brand-3(href="shop-single-product.html") 2022 Apple iMac with Retina 5K Display 8GB RAM, 256GB SSD
                  p
                    span.color-brand-2.font-sm-bold 1 x $2856.4
              .item-cart.mb-20
                .cart-image
                  img(src="assets/imgs/page/homepage1/imgsp4.png", alt="Ecom")
                .cart-info
                  a.font-sm-bold.color-brand-3(href="shop-single-product-2.html") 2022 Apple iMac with Retina 5K Display 8GB RAM, 256GB SSD
                  p
                    span.color-brand-2.font-sm-bold 1 x $2856.4

              .border-bottom.pt-0.mb-15
              .cart-total
                .row
                  .col-6.text-start
                    span.font-md-bold.color-brand-3 Total
                  .col-6
                    span.font-md-bold.color-brand-1 $2586.3
                .row.mt-15
                  .col-6.text-start
                    a.btn.btn-cart.w-auto(href="shop-cart.html") View cart
                  .col-6
                    a.btn.btn-buy.w-auto(href="shop-checkout.html") Checkout

          a.font-lg.icon-list.icon-compare(href='shop-compare.html')
            span Compare
